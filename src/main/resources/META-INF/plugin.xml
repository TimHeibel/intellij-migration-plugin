<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <id>com.github.timheibel.intellijmigrationplugin</id>
    <name>Migration Helper</name>
    <vendor>timheibel</vendor>

    <depends>com.intellij.modules.platform</depends>

    <actions>
        <group
            id = "com.github.timheibel.intellijmigrationplugin.AnnotationAction.Group"
            text = "Annotations"
            popup = "true">
            <add-to-group
                    group-id="EditorPopupMenu"
                    anchor= "last"/>
        </group>
        <action
            id = "com.github.timheibel.intellijmigrationplugin.AnnotationAction.MIGRATED"
            class = "com.github.timheibel.intellijmigrationplugin.actions.annotation.MIGRATEDAnnotationAction"
            text = "MIGRATED"
            description = "Annotated the selected Code-Fragment as Migrated">
            <add-to-group group-id="com.github.timheibel.intellijmigrationplugin.AnnotationAction.Group"/>
        </action>
        <action
                id = "com.github.timheibel.intellijmigrationplugin.AnnotationAction.LATER"
                class = "com.github.timheibel.intellijmigrationplugin.actions.annotation.LATERAnnotationAction"
                text = "LATER"
                description = "Annotated the selected Code-Fragment to be migrated at a later date">
            <add-to-group group-id="com.github.timheibel.intellijmigrationplugin.AnnotationAction.Group"/>
        </action>
        <action
                id = "com.github.timheibel.intellijmigrationplugin.AnnotationAction.UNUSED"
                class = "com.github.timheibel.intellijmigrationplugin.actions.annotation.UNUSEDAnnotationAction"
                text = "UNUSED"
                description = "Annotated the selected Code-Fragment as Unused">
            <add-to-group group-id="com.github.timheibel.intellijmigrationplugin.AnnotationAction.Group"/>
        </action>
        <action
                id = "com.github.timheibel.intellijmigrationplugin.actions.annotation.DialogAction"
                class = "com.github.timheibel.intellijmigrationplugin.actions.annotation.DialogAction"
                text = "Open Annotation Dialog"
                description = "Opens Dialog to enter Annotation-Type and additional informations">
            <keyboard-shortcut
                    keymap="$default"
                    first-keystroke="control alt Q"/>
        </action>
    </actions>
</idea-plugin>
